<!DOCTYPE html>
<html lang="en">

<head>
  <title>Smart ToDo</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

  <!-- Internal CSS -->
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

  <!-- Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">

  <!-- External JS -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

  <!-- App JS -->
  <script type="text/javascript" src="/scripts/app.js"></script>
</head>

<body>
  <header>
    <!-- Top nav bar -->
    <nav class="navbar navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">
          <i class="fas fa-tasks"></i>Smart ToDo
        </a>
        <div class="d-flex">
          <a class="nav-item nav-link" href="#">Login</a>
          <a class="nav-item nav-link" href="#">Register</a>
        </div>
      </div>
    </nav>
  </header>

  <main>
    <section class="add-item">
      <!-- Input error message container -->
      <div id="error" class="alert alert-danger" role="alert"></div>

      <!-- Add new item form -->
      <form method="POST" action="/users/1/items" id="newItem">
        <div class="input-group mb-3">
          <label for="new-item-text"></label>
          <input type="text" name="new-item-text" id="new-item-text" class="form-control" placeholder="Type something">
          <div class="input-group-append">
            <button class="btn btn-outline-primary" type="submit">Add new item</button>
          </div>
        </div>
      </form>
    </section>

    <!-- Display lists -->
    <section id="category-container">
      <div class="row">

        <!-- 'To watch' container -->
        <div class="col-sm">
          <div class="list-group">
            <div class="list-group-item active">
              <h5 class="mb-1"><i class="fas fa-film"></i> To watch</h5>
            </div>
            <div id="watch-container"></div>
          </div>
        </div>

        <!-- 'To read' container -->
        <div class="col-sm">
          <div class="list-group">
            <div class="list-group-item active">
              <h5 class="mb-1"><i class="fas fa-book-open"></i> To read</h5>
            </div>
            <div id="read-container"></div>
          </div>
        </div>

        <!-- 'To eat' container -->
        <div class="col-sm">
          <div class="list-group">
            <div class="list-group-item active">
              <h5 class="mb-1"><i class="fas fa-utensils"></i> To eat</h5>
            </div>
            <div id="eat-container"></div>
          </div>
        </div>

        <!-- 'To buy' container -->
        <div class="col-sm">
          <div class="list-group">
            <div class="list-group-item active">
              <h5 class="mb-1"><i class="fas fa-shopping-cart"></i> To buy</h5>
            </div>
            <div id="buy-container"></div>
          </div>
        </div>
      </div>
    </section>

    <!-- Modal: Edit item -->
    <section class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="editLabel">Edit item</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cancel"></button>
          </div>
          <form method="POST" action="/users/1/items" name="editItem" id="editItem">
            <div class="modal-body">
              <div class="mb-3">
                <label for="new-item-text">Item description:</label>
                <input type="text" name="edit-description" id="edit-description" class="form-control">
              </div>
              <div class="mb-3">
                <label for="edit-category" class="form-label">Category:</label>
                <select class="form-select" id="edit-category" name="edit-category">
                  <option value="Movies">To watch</option>
                  <option value="Books">To read</option>
                  <option value="Dining">To eat</option>
                  <option value="Products">To buy</option>
                </select>
              </div>
              <div class="mb-3 form-check">
                <input class="form-check-input" type="checkbox" value="" id="edit-completed" name="edit-completed">
                <label class="form-check-label" for="edit-completed">Completed</label>
              </div>
            </div>
            <div class="modal-footer">
              <span>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal" id="delete"><i
                    class="fas fa-trash"></i>Delete</button>
              </span>
              <span>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Save</button>
              </span>
            </div>
          </form>
        </div>
      </div>
    </section>

  </main>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
    crossorigin="anonymous"></script>
</body>

</html>
