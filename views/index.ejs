<!DOCTYPE html>
<html lang="en">

<head>
  <title>hippo.</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

  <!-- Internal CSS -->
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400&family=Sniglet:wght@800&display=swap"
    rel="stylesheet">

  <!-- Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">

  <!-- External JS -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

  <!-- JQuery UI (for drag and drop) -->
  <link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>

  <!-- App JS -->
  <script type="text/javascript" src="/scripts/app.js"></script>
</head>

<body>
  <header>
    <%- include('partials/_header') %>
  </header>

  <main>
    <!-- Add new item -->
    <section class="add-item">
      <!-- New item form -->
      <form method="POST" action="/users/1/items" id="newItem">
        <div class="input-group mb-2 list-item">
          <label for="new-item-text"></label>
          <input type="text" name="new-item-text" id="new-item-text" class="form-control" placeholder="Type something">
          <button class="btn btn-dark" type="submit">Add new item</button>
        </div>
      </form>
    </section>

    <!-- Progress bar -->
    <section style="height: auto;" id="alert-container">
      <!-- Input error message container -->
      <div id="error" class="alert alert-danger" role="alert"></div>
      <!-- Confirmation message container -->
      <div id="confirm" class="alert alert-success" role="alert"></div>
    </section>

    <!-- Display lists -->
    <section id="category-container">
      <div class="row">

        <!-- 'To watch' container -->
        <div class="col-lg-3">
          <div class="list-group">
            <div class="list-group-item active" id="watch">
              <h5 class="mb-1"><i class="fas fa-film"></i> To watch</h5>
            </div>
            <div id="watch-container" class="connected-sortable"></div>
          </div>
        </div>

        <!-- 'To read' container -->
        <div class="col-lg-3">
          <div class="list-group">
            <div class="list-group-item active" id="read">
              <h5 class="mb-1"><i class="fas fa-book-open"></i> To read</h5>
            </div>
            <div id="read-container" class="connected-sortable"></div>
          </div>
        </div>

        <!-- 'To eat' container -->
        <div class="col-lg-3">
          <div class="list-group">
            <div class="list-group-item active" id="eat">
              <h5 class="mb-1"><i class="fas fa-utensils"></i> To eat</h5>
            </div>
            <div id="eat-container" class="connected-sortable"></div>
          </div>
        </div>

        <!-- 'To buy' container -->
        <div class="col-lg-3">
          <div class="list-group">
            <div class="list-group-item active" id="buy">
              <h5 class="mb-1"><i class="fas fa-shopping-cart"></i> To buy</h5>
            </div>
            <div id="buy-container" class="connected-sortable"></div>
          </div>
        </div>
      </div>
    </section>

    <!-- Modal: Edit item -->
    <section class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editLabel" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="editLabel">Edit item</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cancel"></button>
          </div>
          <form method="POST" action="/users/1/items" name="editItem" id="editItem">
            <div class="modal-body">
              <div class="mb-3">
                <label for="new-item-text">Item description:</label>
                <input type="text" name="edit-description" id="edit-description" class="form-control">
              </div>
              <div class="mb-3">
                <label for="edit-category" class="form-label">Category:</label>
                <select class="form-select" id="edit-category" name="edit-category">
                  <option value="Movies">To watch</option>
                  <option value="Books">To read</option>
                  <option value="Dining">To eat</option>
                  <option value="Products">To buy</option>
                </select>
              </div>
              <div class="mb-3 form-check">
                <input class="form-check-input" type="checkbox" value="" id="edit-completed" name="edit-completed">
                <label class="form-check-label" for="edit-completed">Completed</label>
              </div>
            </div>
            <div class="modal-footer">
              <span>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal" id="delete"><i
                    class="fas fa-trash"></i>Delete</button>
              </span>
              <span>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-dark">Save</button>
              </span>
            </div>
          </form>
        </div>
      </div>
    </section>

  </main>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
    crossorigin="anonymous"></script>
  <script type="text/javascript" src="/scripts/spinner.js"></script>
</body>


</html>
